{
    "name": "mr-theme",
    "version": "1.0.0",
    "description": "ðŸŽ¨ Sistema de temas moderno com Zustand - Gerenciamento inteligente de tema, favicon automÃ¡tico e performance otimizada",
    "keywords": [
        "theme",
        "dark-mode",
        "light-mode",
        "zustand",
        "react",
        "nextjs",
        "typescript",
        "favicon",
        "system-theme"
    ],
    "author": "Mr. Theme",
    "license": "MIT",
    "type": "module",
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        },
        "./store": {
            "types": "./dist/store.d.ts",
            "import": "./dist/store.js",
            "require": "./dist/store.cjs"
        },
        "./provider": {
            "types": "./dist/provider.d.ts",
            "import": "./dist/provider.js",
            "require": "./dist/provider.cjs"
        },
        "./toggle": {
            "types": "./dist/toggle.d.ts",
            "import": "./dist/toggle.js",
            "require": "./dist/toggle.cjs"
        }
    },
    "files": [
        "dist/**/*",
        "README.md"
    ],
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "type-check": "tsc --noEmit",
        "lint": "eslint src --ext .ts,.tsx",
        "clean": "rm -rf dist"
    },
    "peerDependencies": {
        "react": ">=18.0.0",
        "react-dom": ">=18.0.0",
        "zustand": ">=4.0.0"
    },
    "devDependencies": {
        "@types/react": "^18.0.0",
        "@types/react-dom": "^18.0.0",
        "typescript": "^5.0.0",
        "tsup": "^8.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/your-username/mr-theme.git"
    },
    "bugs": {
        "url": "https://github.com/your-username/mr-theme/issues"
    },
    "homepage": "https://github.com/your-username/mr-theme#readme"
}